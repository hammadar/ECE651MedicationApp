<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalProfessionalAccess">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:text="Medical Professional Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="413dp" />


    <EditText
        android:id="@+id/patientId"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="35dp"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:text="Enter patient ID" />

    <Button
        android:id="@+id/retrievePatientInfo"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="602dp"
        android:text="Retrieve Patient Data"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/addNewMedication"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="554dp"
        android:text="Add New Medication"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/savePatientData"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="507dp"
        android:text="Save Data" />

    <ScrollView
        android:id="@+id/PatientDataScrollView"
        android:layout_width="342dp"
        android:layout_height="494dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp">

        <TableLayout
            android:id="@+id/patientDataTableLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/medicationNameRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/medicationNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medication 1 Name:" />

                    <EditText
                        android:id="@+id/medicationNameTextBox"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:text="" />

                </LinearLayout>


            </TableRow>

            <TableRow
                android:id="@+id/dayFrequencyRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/weeklyFrequencyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Frequency:" />

                    <CheckBox
                        android:id="@+id/sundayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="S" />

                    <CheckBox
                        android:id="@+id/mondayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="M" />

                    <CheckBox
                        android:id="@+id/tuesdayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="T" />

                    <CheckBox
                        android:id="@+id/wednesdayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="W" />

                    <CheckBox
                        android:id="@+id/thursdayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="T" />

                    <CheckBox
                        android:id="@+id/fridayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="F" />

                    <CheckBox
                        android:id="@+id/saturdayCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/checkbox_weekday"
                        android:button="@null"
                        android:gravity="center"
                        android:text="S" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:id="@+id/dailyFrequencyRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/dailyFrequencyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Times per day:" />

                    <Spinner
                        android:id="@+id/dailyFrequencyDropBox"
                        android:layout_width="75dp"
                        android:layout_height="35dp"
                        android:entries="@array/medication_daily_frequency" />

                </LinearLayout>


            </TableRow>

            <TableRow
                android:id="@+id/timeBetweenIntakeRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/timeBetweenIntakeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time between intake:" />

                    <EditText
                        android:id="@+id/timeBetweenIntakeTextBox"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:inputType="text"
                        android:selectAllOnFocus="true"
                        android:text="" />

                    <Spinner
                        android:id="@+id/timeBetweenIntakeUnitsDropBox"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:entries="@array/time_units" />

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </ScrollView>

</RelativeLayout>
